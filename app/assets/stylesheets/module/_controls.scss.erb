#control-submit{
  position: absolute;
  top: 50px;
  left: 10px;
  background: rgb(51, 51, 51);
  z-index: 5;
  font-size: 2em;
  line-height: 1em;
  font-weight: bold;
  padding-bottom: .1em;
  padding-left: .1em;
  padding-right: .1em;
  border-radius: 50px;
  border: 6px solid black;
  opacity: .3;
  a:hover{
    background: none;
  }
  &.visible{
    opacity: 1;
  }
}
