#control-submit{
  position: absolute;
  background: rgba(51, 51, 51, .3);
  z-index: 5;
  font-size: 2em;
  line-height: 1em;
  font-weight: bold;
  padding-bottom: .1em;
  padding-left: 0.085em;
  padding-right: .15em;
  border-radius: 0px 50px 50px 50px;
  border: 6px solid black;
  color: white;
  opacity: 0;
  box-shadow: 3px 3px 1px 0px rgba(0,0,0,.5);
  a{
    color: white;
    &:hover{
      background: none;
    }
  }
  &.visible{
    background: rgba(51, 51, 51, .9);
    opacity: 1;
  }
}
