<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Locations</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% @projects.each do |project| %>
  <tbody>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.locations.count %></td>
      <td><%= link_to 'Show', project %></td>
      <td><%= link_to 'Edit', edit_project_path(project) %></td>
      <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
  <% end %>
</table>
