<%= image_tag 'placeholder/map-400.png' %>

<table class="large-12">
  <thead>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th>Show</th>
      <th>Edit</th>
    </tr>
  </thead>
  <% @projects.each do |project| %>
  <tbody>
    <tr>
        <td>
          <%= link_to project_path(@user, project) do %>
            <h3>
              <%= project.name %>
            </h3>
          <% end %>
        </td>
        <td class="text-center"><%= project.locations.count %></td>
        <td><%= link_to 'Show', project_path(@user, project)  %></td>
        <td><%= link_to 'Edit', edit_project_path(@user, project) %></td>
    </tr>
  </tbody>
  <% end %>
</table>
