<table class="large-12">
  <thead>
    <tr>
      <th>Name</th>
      <th>Locations</th>
    </tr>
  </thead>
  <% @projects.each do |project| %>
  <tbody>
    <tr>
      <td>
        <%= link_to project_path(@user, project) do %>
          <h3>
            <%= project.name %>
          </h3>
        <% end %>
      </td>
      <td class="text-center"><%= project.locations.count %></td>
    </tr>
  </tbody>
  <% end %>
</table>
