

<%#= render 'partial/map_projects/list_view' %>
<table class="large-12 row">
  <thead>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th>Show</th>
      <th>Edit</th>
    </tr>
  </thead>
  <% @projects.each do |project| %>
  <tbody>
    <tr>
        <td>
          <%= link_to project_path(project) do %>
            <h3>
              <%= project.name %>
            </h3>
          <% end %>
        </td>
        <td class="text-center"><%= project.locations.count %></td>
        <td><%= link_to 'Show', project_path(project)  %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= render 'partial/dash/actions' %>

<!-- How to seperate this out? -->
<% content_for :footer_js do %>
  <script>
    mapApp.initialize('current-map');
    <% @locations.each do |location| %>
    mapApp.createMarker(<%= location.longitude %>, <%= location.latitude %>, '', true);
    <% end %>
  </script>
<% end %>
<!-- /How to seperate this out? -->
