

<%#= render 'partial/map_projects/list_view' %>
<div class="large-12 row">
  <ul class="large-block-grid-2 medium-block-grid-2">
  <% @projects.each do |project| %>
    <li>
      <%= image_tag 'momuntain-lg.jpg' %>
      <%= link_to project_path(project) do %>
        <h2  class="text-center">
          <%= project.name %>
        </h2>
      <% end %>
      <div class="row"></div><div class="large-8 column large-centered">
        <%= link_to 'Show', project_path(project), class: 'button small large-6 medium-6 column'  %>
        <%= link_to 'Edit', edit_project_path(project), class: 'button small secondary large-6 medium-6 column' %>
      </div>
    </li>
  <% end %>
  </ul>
</div>

<%= render 'partial/dash/actions' %>

<!-- How to seperate this out? -->
<% content_for :footer_js do %>
  <script>
    mapApp.initialize('current-map');
    <% @locations.each do |location| %>
    mapApp.createMarker(<%= location.longitude %>, <%= location.latitude %>, '', true);
    <% end %>
  </script>
<% end %>
<!-- /How to seperate this out? -->
